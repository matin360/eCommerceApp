@using TelecommunicationDevicesStore.WebUI.Models
@model List<CategoryIndexModel>
@{
	var categories = Model;
}
<div class="dropdown-content">
	@foreach (var cat in categories)
	{
		@Html.ActionLink(cat.Name, "GategoryProducts", "Product", routeValues: new PageModel { CategoryName = cat.Name, ActionName = "GategoryProducts", ControllerName = "Product", ElementsCount = cat.ProductsCount } , htmlAttributes: new { })
	}
</div>
