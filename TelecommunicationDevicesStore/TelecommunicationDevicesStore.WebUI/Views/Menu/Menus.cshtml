
@using TelecommunicationDevicesStore.WebUI.Models
@model List<MenuIndexModel>
@{
	var menus = Model;
}
<ul class="menu-area-main">
	<li>@Html.ActionLink(linkText: "Home", 
					   actionName: "Index", 
					   controllerName: "Home")</li>
	@foreach (var menu in menus)
	{
		<li>@Html.ActionLink(menu.Name, menu.ActionName, menu.ControllerName)</li>
	}
	<li class="dropdown mean-last">
		<a class="dropbtn" href="#">Categories</a>
		<div class="dropdown-content">
			@Html.Action("Categories", "Category")
		</div>
	</li>
</ul>